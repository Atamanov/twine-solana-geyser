# Database Configuration
# Copy to .env and update passwords for production use

# PostgreSQL superuser (used by Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

# Geyser plugin database user
GEYSER_USER=geyser_writer
GEYSER_PASSWORD=geyser_writer_password

# Database name
POSTGRES_DB=twine_solana_db

# PgAdmin credentials (optional)
PGADMIN_DEFAULT_EMAIL=admin@twine.com
PGADMIN_DEFAULT_PASSWORD=admin_password

# Grafana credentials (optional)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin_password