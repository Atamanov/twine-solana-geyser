{
  "folderUid": "twine-geyser",
  "name": "Table Size Distribution",
  "uid": "table-sizes",
  "model": {
    "title": "Table Size Distribution",
    "description": "Size breakdown of database tables",
    "type": "barchart",
    "options": {
      "legend": {
        "displayMode": "hidden",
        "placement": "bottom",
        "showLegend": false
      },
      "orientation": "horizontal",
      "barWidth": 0.8,
      "groupWidth": 0.7,
      "xTickLabelRotation": 0,
      "xTickLabelSpacing": 100,
      "stacking": "none",
      "showValue": "always",
      "barRadius": 0.1
    },
    "targets": [
      {
        "datasource": {
          "type": "postgres",
          "uid": "${postgres}"
        },
        "editorMode": "code",
        "format": "table",
        "rawQuery": true,
        "rawSql": "SELECT \n  schemaname || '.' || tablename AS \"Table\",\n  pg_size_pretty(pg_total_relation_size(schemaname||'.'||tablename)::bigint) AS \"Size\",\n  pg_total_relation_size(schemaname||'.'||tablename)::bigint AS \"Size_bytes\"\nFROM pg_tables\nWHERE schemaname NOT IN ('pg_catalog', 'information_schema', 'timescaledb_information', '_timescaledb_internal')\nORDER BY pg_total_relation_size(schemaname||'.'||tablename)::bigint DESC\nLIMIT 10",
        "refId": "A",
        "sql": {
          "columns": [
            {
              "parameters": [],
              "type": "function"
            }
          ],
          "groupBy": [
            {
              "property": {
                "type": "string"
              },
              "type": "groupBy"
            }
          ],
          "limit": 50
        }
      }
    ],
    "fieldConfig": {
      "defaults": {
        "color": {
          "mode": "continuous-GrYlRd"
        },
        "mappings": [],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {
              "color": "green",
              "value": null
            }
          ]
        },
        "unit": "decbytes",
        "custom": {
          "axisBorderShow": false,
          "axisCenteredZero": false,
          "axisColorMode": "text",
          "axisLabel": "",
          "axisPlacement": "auto",
          "axisSoftMin": 0,
          "fillOpacity": 80,
          "gradientMode": "scheme",
          "hideFrom": {
            "tooltip": false,
            "viz": false,
            "legend": false
          },
          "lineWidth": 1,
          "scaleDistribution": {
            "type": "linear"
          }
        }
      },
      "overrides": [
        {
          "matcher": {
            "id": "byName",
            "options": "Size"
          },
          "properties": [
            {
              "id": "unit",
              "value": "bytes"
            },
            {
              "id": "custom.hideFrom",
              "value": {
                "tooltip": false,
                "viz": true,
                "legend": false
              }
            }
          ]
        }
      ]
    },
    "transformations": [
      {
        "id": "organize",
        "options": {
          "excludeByName": {
            "Size": true
          },
          "indexByName": {},
          "renameByName": {
            "Size_bytes": "Size"
          }
        }
      }
    ]
  },
  "version": 1
}